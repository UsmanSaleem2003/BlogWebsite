<%- include('partials/header'); -%>

<h1>Home</h1>

<p><%= homecontent %></p>
<hr class="line">
<% blogs.forEach(function(blog) { %>
  <h1><%= blog.title %></h1>
  <p>
    <%= blog.content.substring(0, 100) + " ..." %>
    <a href="/posts/<%= encodeURIComponent(blog.title) %>">Read More</a>
  </p>
	<hr class="line">
<% }); %>

<%- include('partials/footer'); -%>
